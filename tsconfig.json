{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": ["vitest/globals"],
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": true,
    "isolatedDeclarations": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*", "./test/**/*"]
}
